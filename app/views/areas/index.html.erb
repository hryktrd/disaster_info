<h1>Listing areas</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Tel</th>
      <th>Lat</th>
      <th>Lng</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @areas.each do |area| %>
      <tr>
        <td><%= area.name %></td>
        <td><%= area.address %></td>
        <td><%= area.tel %></td>
        <td><%= area.lat %></td>
        <td><%= area.lng %></td>
        <td><%= link_to '詳細', area %></td>
        <td><%= link_to '編集', edit_area_path(area) %></td>
        <td><%= link_to '削除', area, method: :delete, data: { confirm: '本当に削除してよろしいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

