<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @area.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @area.address %>
</p>

<p>
  <strong>Tel:</strong>
  <%= @area.tel %>
</p>

<p>
  <strong>Lat:</strong>
  <%= @area.lat %>
</p>

<p>
  <strong>Lng:</strong>
  <%= @area.lng %>
</p>

<%= link_to 'Edit', edit_area_path(@area) %> |
<%= link_to 'Back', areas_path %>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @area.situations.each do |situation| %>
      <tr>
        <td><%= situation.text %></td>
        <td><%= situation.status %></td>
        <td><%= link_to 'Show', area_situation_path(@area,situation) %></td>
        <td><%= link_to 'Edit', edit_area_situation_path(@area,situation) %></td>
        <td><%= link_to 'Destroy', area_situation_path(@area,situation), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '災害状況新規追加', new_area_situation_path(@area) %>

<table>
  <thead>
    <tr>
      <th>Thing</th>
      <th>Status</th>
      <!-- <th>Area</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @area.needs.each do |need| %>
      <tr>
        <td><%= need.thing %></td>
        <td><%= need.status %></td>
        <td><%= link_to 'Show', area_need_path(@area,need) %></td>
        <td><%= link_to 'Edit', edit_area_need_path(@area,need) %></td>
        <td><%= link_to 'Destroy', area_need_path(@area,need), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '必要なもの、人、技術など新規追加', new_area_need_path(@area) %>
