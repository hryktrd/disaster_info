<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @area.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @area.address %>
</p>

<p>
  <strong>Tel:</strong>
  <%= @area.tel %>
</p>

<p>
  <strong>Lat:</strong>
  <%= @area.lat %>
</p>

<p>
  <strong>Lng:</strong>
  <%= @area.lng %>
</p>

<%= link_to 'Edit', edit_area_path(@area) %> |
<%= link_to 'Back', areas_path %>

<% @area.situations.each do |situation| %>
  situation.text
<% end %>

<table>
  <thead>
    <tr>
      <th>Thing</th>
      <th>Status</th>
      <!-- <th>Area</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @area.needs.each do |need| %>
      <tr>
        <td><%= need.thing %></td>
        <td><%= need.status %></td>
        <td><%= link_to 'Show', need %></td>
        <td><%= link_to 'Edit', edit_need_path(need) %></td>
        <td><%= link_to 'Destroy', need, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>