<h1>Listing needs</h1>

<table>
  <thead>
    <tr>
      <th>Thing</th>
      <th>Status</th>
      <!-- <th>Area</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @needs.each do |need| %>
      <tr>
        <td><%= need.thing %></td>
        <td><%= need.status %></td>
        <td><%= link_to 'Show', area_need_path(@area,need) %></td>
        <td><%= link_to 'Edit', edit_area_need_path(@area,need) %></td>
        <td><%= link_to 'Destroy', area_need_path(@area,need), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Need', new_area_need_path(@area) %>
